<!DOCTYPE html>
<html lang="en">
	<head>
		<%-include('partials/head') %>
		<title>birbs&borbs</title>
	</head>
	<body>
		<%-include('partials/menu')%>
		<main class="container p-3 mx-auto">
			<h1 class="display-1 my-5">birbs & borbs</h1>
			<% if(notes.length) { %>
			<a href="/note" class="btn btn-primary my-3">Add a note</a>
			<% notes.forEach((note) => { %>
			<div class="bg-light p-3 mb-3">
				<div class="h3 pb-2 border-bottom border-dark">
					<a href="/note/<%=(note.id)%>"> Note</a>
				</div>
				<dl>
					<dt>Spotted on</dt>
					<dd><%= note.date_time %></dd>
					<dt>Species</dt>
					<dd><%= note.species %></dd>
					<dt>Flock Size</dt>
					<dd><%= note.flock_size %></dd>
				</dl>
			</div>
			<% }) %> <% } else { %>
			<div class="bg-light p-3 mb-3">
				<p>Please log in to view your notes.</p>
			</div>
			<a href="/signup" class="btn btn-primary my-3"
				>Click here to create an account if you're new.</a
			>
			<%}%>
		</main>
		<!-- Bootstrap script -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
	</body>
</html>
